root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.build]
indent_style = tab

[*.sass]
indent_style = space
indent_size = 4

[*.csproj]
indent_style = space
indent_size = 2

[{package.json,bower.json}]
indent_style = space
indent_size = 2
end_of_line = lf